<schema lang="js-zod">
const schema = z.object({
  message: z.string(),
  user: z.object({
    name: z.string()
  }),
  authenticated: z.boolean()
});
</schema>

<template>
  <div class="{{theme_class}}">
    <h1>{{greeting}}</h1>
    {{#if authenticated}}
      <p>Hello, {{user.name}}!</p>
    {{else}}
      <p>Please log in.</p>
    {{/if}}
  </div>
</template>
